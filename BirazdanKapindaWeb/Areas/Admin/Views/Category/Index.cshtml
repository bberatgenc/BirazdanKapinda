@model List<Category>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white bg-warning py-2">KATEGORİ LİSTESİ</h1>
                <a class="navbar-brand justify-content-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/img/BkLogo.jpg" style="width:300px" />
                </a>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-warning">
                    <i class="bi bi-plus-circle"></i> YENİ KATEGORİ EKLE
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        KATEGORİ İSMİ
                    </th>
                    <th>
                        ÜRÜN SIRASI
                    </th>
                    <th class="text-center">İŞLEM YAP</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                        <td class="text-center">
                            <!-- Center align the buttons -->
                            <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                    <i class="bi bi-pencil-square"></i> Düzenle
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>