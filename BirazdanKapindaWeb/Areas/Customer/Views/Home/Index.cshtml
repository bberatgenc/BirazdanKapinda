@model IEnumerable<Product>

    <div class="row pb-3">
        @foreach(var product in Model)
    {
        <div class="col-sm-4">
            <div class="row pt-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        @if (product.ProductImages != null && product.ProductImages.Count() > 0)
                        {
                            <img src="@product.ProductImages.FirstOrDefault().ImageUrl" class="card-img-top rounded" />
                        }
                        else
                        {
                            <img src="https://placehold.co/500x600/png" class="card-img-top rounded" />
                        }
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark fw-bold text-uppercase text-center">@product.Title</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-primary fw-bold text-center">@product.ListPrice.ToString("c")</p>
                            </div>
                            <div>
                                <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-warning bg-warning  border-0 form-control">
                                    Detaylı İncele
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
